{

  "properties": {
    "connectionParameters": {
      "host": {
        "type": "string",
        "uiDefinition": {
          "displayName": "Host URL",
          "description": "The base host for the selected service (e.g., bsky.social or api.bsky.chat).",
          "tooltip": "Enter the base host URL for the API.",
          "default": "api.bsky.social",
          "constraints": {
            "required": true
          }
        }
      },
      "username": {
        "type": "string",
        "uiDefinition": {
          "displayName": "Bluesky Handle",
          "description": "The Bluesky Handle used for authentication.",
          "tooltip": "Enter your Bluesky handle (username).",
          "constraints": {
            "required": true
          }
        }
      },
      "password": {
        "type": "securestring",
        "uiDefinition": {
          "displayName": "Bluesky Password",
          "description": "The Bluesky Password used for authentication.",
          "tooltip": "Enter your Bluesky password.",
          "constraints": {
            "required": true
          }
        }
      }
    },
    "policyTemplateInstances": [
      {
        "templateId": "sethost",
        "title": "Set Host URL",
        "parameters": {
          "x-ms-apimTemplateParameter.host": "if(contains({{host}}, 'chat'), 'api.bsky.chat', if(contains({{host}}, 'mod'), 'mod.bsky.app', 'api.bsky.social'))"
        }
      },
      {
        "templateId": "acquiretoken",
        "title": "Acquire Access Token",
        "parameters": {
          "x-ms-apimTemplateParameter.tokenEndpoint": "https://{{host}}/xrpc/com.atproto.server.createSession",
          "x-ms-apimTemplateParameter.tokenMethod": "POST",
          "x-ms-apimTemplateParameter.tokenBody": "username={{username}}&password={{password}}",
          "x-ms-apimTemplateParameter.tokenResultPath": "accessJwt"
        },
        "runPolicyOn": "request"
      },
      {
        "templateId": "setheader",
        "title": "Set Authorization Header",
        "parameters": {
          "x-ms-apimTemplateParameter.name": "Authorization",
          "x-ms-apimTemplateParameter.value": "Bearer {{accessJwt}}",
          "x-ms-apimTemplateParameter.existsAction": "override"
        },
        "runPolicyOn": "request"
      }
    ],
    "iconBrandColor": "#da3b01",
    "capabilities": [],
    "publisher": "Your Name",
    "stackOwner": "Bluesky PBC"
  }
}