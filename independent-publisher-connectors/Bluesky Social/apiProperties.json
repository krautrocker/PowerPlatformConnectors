{
  "properties": {
    "connectionParameters": {
      "host": {
        "type": "string",
        "uiDefinition": {
          "displayName": "Host URL",
          "description": "The base host for the selected service (e.g., bsky.social or api.bsky.chat).",
          "tooltip": "Enter the base host URL for the API.",
          "default": "api.bsky.social",
          "constraints": {
            "required": true
          }
        }
      },
      "username": {
        "type": "string",
        "uiDefinition": {
          "displayName": "Bluesky Handle",
          "description": "The Bluesky Handle used for authentication.",
          "tooltip": "Enter your Bluesky handle (username).",
          "constraints": {
            "required": true
          }
        }
      },
      "password": {
        "type": "securestring",
        "uiDefinition": {
          "displayName": "Bluesky Password",
          "description": "The Bluesky Password used for authentication.",
          "tooltip": "Enter your Bluesky password.",
          "constraints": {
            "required": true
          }
        }
      },
      "accessJwt": {
        "type": "securestring",
        "uiDefinition": {
          "displayName": "Access Token",
          "description": "The access token returned by the Bluesky API.",
          "tooltip": "This token is used for authentication in API requests.",
          "constraints": {
            "required": true
          }
        }
      }
    },
    "policyTemplateInstances": [
      {
        "templateId": "dynamichosturl",
        "title": "Set Host URL",
        "parameters": {
          "x-ms-apimTemplateParameter.urlTemplate": "{host}"
        }
      },
      {
        "templateId": "setheader",
        "title": "Set Authorization Header",
        "parameters": {
          "x-ms-apimTemplateParameter.name": "Authorization",
          "x-ms-apimTemplateParameter.value": "Bearer {{accessJwt}}",
          "x-ms-apimTemplateParameter.existsAction": "override"
        }
      }
    ],
    "iconBrandColor": "#da3b01",
    "capabilities": [],
    "publisher": "Dan Romano",
    "stackOwner": "Bluesky PBC"
  }
}
