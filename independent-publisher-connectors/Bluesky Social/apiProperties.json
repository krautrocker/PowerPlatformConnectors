{
  "connectionParameters": {
    "identifier": {
      "type": "string",
      "uiDefinition": {
        "displayName": "Bluesky Username",
        "description": "The username or email used for authentication.",
        "tooltip": "Enter your Bluesky username or email.",
        "constraints": {
          "required": "true"
        }
      }
    },
    "password": {
      "type": "securestring",
      "uiDefinition": {
        "displayName": "Bluesky Password",
        "description": "The password or API key for authentication.",
        "tooltip": "Enter your Bluesky password or app password.",
        "constraints": {
          "required": "true"
        }
      }
    },
    "pdsHost": {
      "type": "string",
      "uiDefinition": {
        "displayName": "Bluesky Host",
        "description": "The Bluesky server host (e.g., bsky.social).",
        "tooltip": "Enter the Bluesky host. Default: bsky.social",
        "default": "bsky.social",
        "constraints": {
          "required": "false"
        }
      }
    }
  },
  "policyTemplateInstances": [
    {
      "templateId": "setheader",
      "title": "Add Authorization Header",
      "parameters": {
        "x-ms-apimTemplateParameter.name": "Authorization",
        "x-ms-apimTemplateParameter.value": "Bearer @connectionParameters('accessJwt')",
        "x-ms-apimTemplateParameter.existsAction": "override"
      }
    }
  ]
}
